# Importing random module
import random

# Split string method
names_string = input("Give me everybody's names, separated by a comma. ")
names = names_string.split(", ")


# Checking the length of the string
total_people = len(names)
total_people -= 1

print(f"total number of people in the list are:  {total_people}")

#Using random function to randomize.
ran_num = random.randint(0,total_people)

print(f"{names[(ran_num)]}, is going to buy meal today!")
